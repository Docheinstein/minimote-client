<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.servers.ServersFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/uiDiscoverServersButton"
            android:layout_width="56dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/discover_servers_button_description"
            android:src="@drawable/discover"
            app:tint="@color/fab_text"
            app:backgroundTint="@color/fab_background_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/uiAddServerButton"
            android:layout_width="56dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/add_server_button_description"
            android:src="@drawable/add"
            app:tint="@color/fab_text"
            app:backgroundTint="@color/fab_background_secondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>