<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
            app:iconSpaceReserved="false"
            android:title="Controller">
        <CheckBoxPreference
            app:iconSpaceReserved="false"
            android:defaultValue="@bool/pref_automatically_show_touchpad_buttons_default"
            android:key="@string/pref_automatically_show_touchpad_buttons"
            android:title="@string/settings_automatically_show_touchpad_buttons" />
        <CheckBoxPreference
            app:iconSpaceReserved="false"
            android:defaultValue="@bool/pref_automatically_show_hotkeys_default"
            android:key="@string/pref_automatically_show_hotkeys"
            android:title="@string/settings_automatically_show_hotkeys" />
        <CheckBoxPreference
            app:iconSpaceReserved="false"
            android:defaultValue="@bool/pref_automatically_show_keyboard_default"
            android:key="@string/pref_automatically_show_keyboard"
            android:title="@string/settings_automatically_show_keyboard" />
    </PreferenceCategory>
</PreferenceScreen>