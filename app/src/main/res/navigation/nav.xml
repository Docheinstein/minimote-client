<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation"
        app:startDestination="@+id/nav_servers">

    <fragment
            android:id="@+id/nav_servers"
            android:name="org.docheinstein.minimotek.ui.servers.ServersFragment"
            android:label="@string/servers"
            tools:layout="@layout/server_list" >
        <action
            android:id="@+id/action_add_edit_server"
            app:destination="@id/nav_add_edit_server"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_controller"
            app:destination="@id/nav_controller"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
            android:id="@+id/nav_add_edit_server"
            android:name="org.docheinstein.minimotek.ui.server.AddEditServerFragment"
            android:label="{title}"
            tools:layout="@layout/add_edit_server">
        <argument
            android:name="serverId"
            app:argType="long" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <fragment
            android:id="@+id/nav_controller"
            android:name="org.docheinstein.minimotek.ui.controller.ControllerFragment"
            android:label="{title}"
            tools:layout="@layout/controller">
        <argument
            android:name="address"
            app:argType="string" />
        <argument
            android:name="port"
            app:argType="integer" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>

</navigation>